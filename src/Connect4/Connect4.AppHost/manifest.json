{
  "resources": {
    "redis": {
      "type": "container.v0",
      "connectionString": "{redis.bindings.tcp.host}:{redis.bindings.tcp.port}",
      "image": "docker.io/library/redis:7.2.4",
      "args": [
        "--save",
        "2",
        "1"
      ],
      "volumes": [
        {
          "name": "redis-data",
          "target": "/data",
          "readOnly": false
        }
      ],
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 6379
        }
      }
    },
    "mongodb": {
      "type": "container.v0",
      "connectionString": "mongodb://{mongodb.bindings.tcp.host}:{mongodb.bindings.tcp.port}",
      "image": "docker.io/library/mongo:7.0.5",
      "volumes": [
        {
          "name": "mongodb-data",
          "target": "/data/db",
          "readOnly": false
        }
      ],
      "env": {
        "MONGO_INITDB_DATABASE": "projections"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 27017
        }
      }
    },
    "projections": {
      "type": "value.v0",
      "connectionString": "{mongodb.connectionString}/projections"
    },
    "RabbitMQUsername": {
      "type": "parameter.v0",
      "value": "{RabbitMQUsername.inputs.value}",
      "inputs": {
        "value": {
          "type": "string"
        }
      }
    },
    "RabbitMQPassword": {
      "type": "parameter.v0",
      "value": "{RabbitMQPassword.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true
        }
      }
    },
    "rabbitmq": {
      "type": "container.v0",
      "connectionString": "amqp://{RabbitMQUsername.value}:{RabbitMQPassword.value}@{rabbitmq.bindings.tcp.host}:{rabbitmq.bindings.tcp.port}",
      "image": "docker.io/library/rabbitmq:3-management",
      "args": [
        "/bin/bash",
        "-c",
        "rabbitmq-plugins enable --offline rabbitmq_mqtt; rabbitmq-server"
      ],
      "env": {
        "RABBITMQ_DEFAULT_USER": "{RabbitMQUsername.value}",
        "RABBITMQ_DEFAULT_PASS": "{RabbitMQPassword.value}"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 5672
        },
        "mqtt": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 1883
        },
        "management": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 15672
        }
      }
    },
    "webapp": {
      "type": "project.v0",
      "path": "../Connect4.Web/Connect4.Web.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "Orleans__Clustering__ProviderType": "Redis",
        "Orleans__Clustering__ServiceKey": "redis",
        "ConnectionStrings__redis": "{redis.connectionString}",
        "Orleans__ClusterId": "{orleans-cluster-id.value}",
        "Orleans__ServiceId": "{orleans-service-id.value}",
        "Orleans__EnableDistributedTracing": "true",
        "Orleans__GrainStorage__games__ProviderType": "Redis",
        "Orleans__GrainStorage__games__ServiceKey": "redis",
        "Orleans__GrainStorage__visualizers__ProviderType": "Redis",
        "Orleans__GrainStorage__visualizers__ServiceKey": "redis",
        "Orleans__Endpoints__SiloPort": "{webapp.bindings.orleans-silo.targetPort}",
        "Orleans__Endpoints__GatewayPort": "{webapp.bindings.orleans-gateway.targetPort}",
        "ConnectionStrings__projections": "{projections.connectionString}",
        "MQTT_HOST": "{rabbitmq.bindings.mqtt.host}",
        "MQTT_USERNAME": "{RabbitMQUsername.value}",
        "MQTT_PASSWORD": "{RabbitMQPassword.value}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http"
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http"
        },
        "orleans-silo": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 8000
        },
        "orleans-gateway": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 8001
        }
      }
    },
    "orleans-cluster-id": {
      "type": "parameter.v0",
      "value": "{orleans-cluster-id.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "default": {
            "generate": {
              "minLength": 25,
              "upper": false,
              "special": false
            }
          }
        }
      }
    },
    "orleans-service-id": {
      "type": "parameter.v0",
      "value": "{orleans-service-id.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "default": {
            "generate": {
              "minLength": 25,
              "upper": false,
              "special": false
            }
          }
        }
      }
    }
  }
}