@using Connect4.Frontend.Visualizer
<MudContainer Fixed="true" MaxWidth="MaxWidth.ExtraLarge">
    <div class="d-flex flex-column flex-wrap justify-content-center gap-2 p-2">
        <MudPaper>
            <div class="d-flex flex-row flex-wrap justify-content-center gap-3 p-1 m-1">
                <PlayerInGameDisplay PlayerClient="RedPlayer" IsCurrentPlayer="this.Game.CurrentPlayerId == this.RedPlayer.Player?.Id" />
                <MudSpacer />
                <VisualizerDisplay ShowImage="false" Editable="false" VisualizerId="this.Visualizer?.Id"></VisualizerDisplay>
                <MudSpacer />
                <PlayerInGameDisplay PlayerClient="YellowPlayer" IsCurrentPlayer="this.Game.CurrentPlayerId == this.YellowPlayer.Player?.Id" />
            </div>
            @* TODO Spiel Aufgeben und Abbrechen können wenn ein Player Client der eigene *@
        </MudPaper>
        <Board VisualizerStatus="this.Visualizer?.Status" BoardState="Game.Board" CurrentPlayer="this.Game.CurrentPlayerId == this.YellowPlayer.Player?.Id ? this.YellowPlayer : this.RedPlayer" GameId="Game.Id" />
    </div>
</MudContainer>
